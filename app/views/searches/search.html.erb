<div class="px-3">
  <h2><%= params[:range] %> search for "<%= params[:word] %>"</h2>
    <% if @range == "User" %>
    <table class="table table-hover">
      <tr>
        <th></th>
        <th>name</th>
        <th>introduction</th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: "50x50" %></td>
          <td>
            <%= link_to user_path(user.id) do %>
              <%= user.name %>
            <% end %>
          </td>
          <td><%= user.introduction %></td>
        </tr>
      <% end %>
    </table>
  <% else %>
    <table class="table table-hover">
      <tr>
        <th></th>
        <th>title</th>
        <th>opinion</th>
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size: "50x50" %></td>
          <td>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </table>
  <% end %>
</div>